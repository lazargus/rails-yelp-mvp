<div class="container">
  <h1><%= @restaurant.name %></h1>
  <div class="details">
    <div>
      <p><em>Adress: </em><%= @restaurant.address %></p>
      <p><em>Category: </em><%= @restaurant.category %></p>
      <p><em>Phone Number: </em><%= @restaurant.phone_number %></p>
    </div>
    <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class:'btn btn-secondary'  %>
  </div>
<hr>
  <h4>Reviews</h4>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %>
          <br>
          <strong>Rating: </strong><%= review.rating %>
      </li>
    <% end %>
  </ul>
<hr>

<%= link_to 'Back to list', restaurants_path  %>
</div>

